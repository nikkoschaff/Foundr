<%= form_for @role = Role.new, :url => role_signup_path  do |f| %>
    <% if @role.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize( @role.errors.count, "error" ) %>
                                    prohibited this role from being saved:</h2>
            <ul>
                <% @role.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= f.text_field :email, :placeholder => "Email" %>
    </div>
    <div class="field">
        <%= f.password_field :password, :placeholder => "Password" %>
    </div>
    <div class="field">
        <%= f.password_field :password_confirm, :placeholder => "Password confirmation" %>
    </div>
    <div class="action">
        <%= f.submit "Sign up for Foundr", :class => "button" %>
    </div>
<% end %>
