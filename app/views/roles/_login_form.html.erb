<%= form_tag role_authenticate_path, :method => :post do %>
    <div class="field">
        <%= text_field_tag :email, nil, :placeholder => "Email" %>
    </div>
    <div class="field">
        <%= password_field_tag :password, nil, :placeholder => "Password" %>
    </div>
    <div class="actions">
        <%= submit_tag "Sign in", :class => "btn btn-primary" %>
    </div>
<% end %>
